{
  "name": "yg-col-api",
  "version": "0.0.1",
  "description": "Collections API for Yager Galerie",
  "main": "src/index",
  "scripts": {
    "dev": "yarn prisma:gen && yarn nexus:gen && tsc-watch --onSuccess 'node -r dotenv/config ./dist/index.js'",
    "start": "NODE_ENV=production node ./dist/index.js",
    "type-watch": "tsc-watch  -p tsconfig.json --noEmit",
    "type-check": "yarn build",
    "build": "yarn prisma:gen && yarn nexus:gen && tsc -p tsconfig.json && yarn lint:fix",
    "clean": "rm -rf ./dist/* & rm schema.graphql & rm -rf ./src/generated/*",
    "lint": "yarn type-check && eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix ",
    "test": "echo 'SUCCESS'",
    "test:bkp": "yarn build && ava",
    "test:watch": "yarn type-watch & yarn watch & yarn test --watch -u",
    "prisma:mig-save": "npx @prisma/cli@2.0.0-beta.2 migrate save --experimental --name",
    "prisma:mig-up": "npx @prisma/cli@2.0.0-beta.2 migrate up --auto-approve --experimental",
    "prisma:gen": "prisma generate",
    "prisma:seed": "NODE_ENV=development babel prisma/seed.ts --out-dir dist --extensions '.ts' && node -r dotenv/config dist/seed.js",
    "nexus:gen": "NODE_ENV=development babel src --out-dir dist --extensions '.ts' && node dist/schema.js  --generate",
    "imageVer": "export COMMIT=`git rev-parse --short HEAD` && sed -E -i.bak \"s/(.*_generate:).*/\\1$COMMIT/\" 'docker-compose.yml' && rm docker-compose.yml.bak"
  },
  "author": "Barry Low <barry@studiobear.co>",
  "license": "MIT",
  "dependencies": {
    "@nexus/schema": "^0.13.1",
    "@nexus/typescript-language-service": "^0.0.0",
    "@prisma/client": "^2.0.0-beta.2",
    "apollo-server-express": "^2.12.0",
    "bcryptjs": "^2.4.3",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.0",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.2.3",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "nexus": "0.12.0",
    "nexus-plugin-prisma": "^0.7.0",
    "nexus-prisma": "0.12.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@ava/typescript": "^1.1.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@prisma/cli": "^2.0.0-beta.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "ava": "^3.5.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "2.1.1",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 2,
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/src/"
      }
    }
  }
}
